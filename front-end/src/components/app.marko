import Mailbox from "<mailbox>"
import Login from "<login>"

class {
    onCreate() {
        this.state = {
            pages: {"login": Login, "mailbox": Mailbox},
            page: "login"
        };
    }

    changePage(page) {
        this.state.page = page;
        this.setStateDirty("page");
    }
}

